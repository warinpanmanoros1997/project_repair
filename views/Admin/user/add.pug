extends ../layout
block content
    body(class="hold-transition skin-purple sidebar-mini")
    div.wrapper
      header.main-header
        a.logo <span class="logo-mini"><b>A</b>LT</span> <span class="logo-lg">Simple<b>Admin</b>LTE</span>
        nav(class="navbar navbar-static-top")
          a(class="sidebar-toggle",data-toggle="offcanvas",role="button",href="#")
            span.sr-only
            span.icon-bar Toggle navigation
            span.icon-bar
            span.icon-bar
          div.navbar-custom-menu
            ul(class="nav navbar-nav")
              li(class="user user-menu")
                a(class="",data-toggle="offcanvas",role="button",href="#")
                 <img src="/dist/img/user2-160x160.jpg"class="user-image" alt="User Image">
                  span.hidden-xs Alexander Pierce
      aside.main-sidebar
         section.sidebar
           div.user-panel
             div(class="pull-left image")
               <img src="/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
             div(class="pull-left info")
               p Alexander Pierce
               a <i class="fa fa-circle text-success"></i> Online
           ul.sidebar-menu
            li.header MAIN NAVIGATION
            li <a href=""><span>ข้อมูลแจ้งซ่อม</span></a>
            li <a href=""><span>จัดการอุปกรณ์</span></a>
            li <a href=""><span>จัดการช่าง</span></a>
            li <a href=""><span>สถานะการแจ้งซ่อม</span></a>
            li <a href=""><span>สถิติ</span></a>
            li <a href=""><span>รายงาน</span></a>
            li <a href=""><span>รายงานซ่อมเสร็จ</span></a>
            li <a href=""><span>ออกจากระบบ</span></a>
      div.content-wrapper
        section.content-header
          h1 จัดการช่าง
          ol.breadcrumb
            li <a href="#"><i class="fa fa-dashboard"></i> Home</a>
            li <a href="#">Examples</a>
            li.acive Blank page
        section.content
         form(action="/users/create",method="post",class="form-horizontal")
          div.box
            div(class="box-header with-border")
              h3.box-title เพิ่มผู้ดูแลระบบ
            div.box-body
             div.form-group
              label(class='col-sm-2 control-label') คำนำหน้าชื่อ
              div.col-sm-10
                select(class='form-control',name="user_prename")
                  option(value="") เลือก
                  option(value="1") นาย
                  option(value="2") นาง
                  option(value="3") นางสาว
             div.form-group
              label(class='col-sm-2 control-label') ชื่อ
              div.col-sm-10
                input(class='form-control',placeholder='ชื่อ',name="user_firstname")
             div.form-group
              label(class='col-sm-2 control-label') นามสกุล
              div.col-sm-10
                input(class='form-control',placeholder='นามสกุล',name="user_lastname")
             div.form-group
              label(class='col-sm-2 control-label') Username
              div.col-sm-10
                input(class='form-control',placeholder='Username',name="user_username")
             div.form-group
              label(class='col-sm-2 control-label') Password
              div.col-sm-10
                input(class='form-control',placeholder='Password',name="user_password")
             div.form-group
              label(class='col-sm-2 control-label') เบอร์โทรศัพท์
              div.col-sm-10
                input(class='form-control',placeholder='เบอร์โทรศัพท์',name="user_phone")
             div.form-group
              label(class='col-sm-2 control-label') Email
              div.col-sm-10
                input(class='form-control',placeholder='Email',name="email")
                <br>
                button(type='submit',class='btn btn-primary') บันทึก
