extends ../layout

block content
  body(class="hold-transition skin-purple sidebar-mini")
    div.wrapper
      include ../header.pug
      aside.main-sidebar
         section.sidebar
           div.user-panel
             div(class="pull-left image")
               <img src="/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
             div(class="pull-left info")
               p Alexander Pierce
               a <i class="fa fa-circle text-success"></i> Online
           ul.sidebar-menu
            li.header MAIN NAVIGATION
            li <a href="/admin/main"><span>ข้อมูลแจ้งซ่อม</span></a>
            li <a href="/tool"><span>จัดการอุปกรณ์</span></a>
            li.active <a href="/users"><span>จัดการช่าง</span></a>
            li <a href="/status_order"><span>สถานะการแจ้งซ่อม</span></a>
            li <a href=""><span>สถิติ</span></a>
            li <a href=""><span>รายงาน</span></a>
            li <a href=""><span>รายงานซ่อมเสร็จ</span></a>
            li <a href=""><span>ออกจากระบบ</span></a>
      div.content-wrapper
        section.content-header
          h1 จัดการช่าง
          ol.breadcrumb
            li <a href="#"><i class="fa fa-dashboard"></i> Home</a>
            li <a href="#">Examples</a>
            li.acive Blank page
        section.content
          div.box
            div(class="box-header with-border")
              h3.box-title จัดการช่าง <a class="btn btn-success" href="/users/add">เพิ่ม</a>
            div.box-body
            table(class='table table-bordered table-striped',id='example1')
             thead
               tr
                 th id
                 th ชื่อ-นามสกุล
                 th username
                 th password
                 th เบอร์โทร
                 th อีเมลล์
                 th เครื่องมือ
             each value,index in data
               tr
                 td=index+1 
                 td=value.user_firstname+' '+value.user_lastname
                 td=value.user_username
                 td=value.user_password
                 td=value.user_phone
                 td=value.email
                 td <a class="btn btn-warning" href="/users/edit/#{value._id}">แก้ไข</a> <a class="btn btn-danger" href='/users/delete/#{value._id}'>ลบ</a>


      include ../footer.pug
    script.
      $(document).ready(function () {
        $(function () {
          $('#example1').DataTable()
          $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': false,
            'searching'   : false,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
            })
          })
      });
